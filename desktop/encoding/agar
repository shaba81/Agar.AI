%blob(1,1,1,1).
%blob(2,2,2,1).
%blob(3,3,3,1).
%blob(4,4,4,2).
%blob(5,5,5,5).
%blob(0,1,1,3).

insegui(B) | nonInsegui(B) :- blob(B,_,_,_).
:- insegui(B), blob(B,_,_,R1), actor(_,_,_,R2), R1>=R2.
:- #count{X:insegui(X)} = Y, Y<>1.
diff(B,D) :- actor(_,_,_,R1), blob(B,_,_,R2), D=R1-R2, D>0.
:~ insegui(B), diff(B,D). [D@1]
